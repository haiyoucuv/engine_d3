{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "es5",
		"noImplicitAny": false,
		"sourceMap": true,
		"removeComments": true,
		"noEmitOnError": true,
		"noEmitHelpers": true,
		"experimentalDecorators": true,
		"outDir": "dist-m",
		"lib": [
			"es5",
			"dom",
			"es2015.promise"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}
